<% layout('layouts/boilerplate') %>

<div class="container mt-3">
  <h1>History</h1>

  <!-- SÃ¶k rutan -->
  <div class="row">
    <div class="col-sm-6"></div>

    <div class="col-sm-6">
      <form id="search-box">
        <div class="input-group mb-4">
          <input
            type="text"
            class="search-by-name form-control"
            id="searchBar"
            name="name"
            placeholder="Search Auction"
            disabled
          />
          <button class="search-btn btn btn-primary" type="submit" disabled>
            Search
          </button>
        </div>
      </form>
    </div>
  </div>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Auction Title</th>
        <th>Offer</th>
        <th>End date</th>
        <th>Winner</th>
      </tr>
    </thead>

    <tbody>
      <!-- for each aution -->
      <% for (let auction of newAuctions) { %>
      <tr>
        <td>
          <a href="/auctions/<%= auction._id %>">
            <%= auction.payload.name.val[0] %>
          </a>
        </td>
        <td><%= auction.payload.articleno.val[0] %></td>
        <td><%= auction.payload.closing_time.val[0] %></td>
        <td><%= auction.payload.highest_bidder.val[0] %></td>
      </tr>
      <% } %>
    </tbody>
  </table>

  <div class="row">
    <div class="col-sm-6">
      <% if(totalPages > 1) { %>
        <ul class="pagination">
          <% for (var page = 0; page < totalPages; page++) { %>
            <% if ((page+1) == currentPage) { %> 
              <li class="page-item active"><a class="page-link" href="/auctions/history/?page=<%=page+1%>"><%=page+1%></a></li>
            <% } else { %> 
              <li class="page-item"><a class="page-link" href="/auctions/history/?page=<%=page+1%>"><%=page+1%></a></li>
            <% } %>
          <% } %>
        </ul>  
      <% } %>
    </div>

    <div class="col-sm-6">
      <div class="card-body text-end">
        <a class="card-link btn btn-info col-3" href="/auctions/">Back</a>
      </div>
    </div>
  </div>

</div>
