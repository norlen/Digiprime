<% layout('layouts/boilerplate') %>
    <link rel="stylesheet" href="/stylesheets/stars.css">

<div class="container mt-3">

    <h1>History</h1>

    <!-- SÃ¶k rutan -->
    <div class="row">
        <div class="col-sm-6"></div>

        <div class="col-sm-6">
            <form id="search-box">
                <div class="input-group mb-4">
                    <input type="text" class="search-by-name form-control" id="searchBar" name="name" placeholder="Search Auction Title">
                    <button class="search-btn btn btn-primary" type="submit">Search</button>
                </div>
            </form>
        </div>
    </div>
    

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Auction Title</th>
                <th>Offer</th>
                <th>End date</th>
                <th>Winner</th>
            </tr>
        </tHead>

        <tbody>
            <!-- for each aution --> 
            <% for(var auction = 0; auction < auctions.length; auction++) { %>
                    <td> <a href='/auctions/<%= auctions[auction].auction._id %>'> <%= auctions[auction].auction.payload.name.val[0] %> </a> </td>
                    <td> <%= auctions[auction].auction.payload.article_no.val[0] %> </td>
                    <td> <%= auctions[auction].auction.payload.closing_time.val[0] %> </td>
                    <td> <%= auctions[auction].auction.payload.highest_bidder.val[0] %> </td>
                </tr>
            <% } %>
        </tbody>

    </table>

    <div class="card-body text-end">  
        <a class="card-link btn btn-info col-1" href="#">More</a>
        <a class="card-link btn btn-info col-1" href="/auctions/">Back</a>
    </div>

