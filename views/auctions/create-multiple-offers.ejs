<% layout('layouts/boilerplate') %>

<h1 class="mb-4">
  Create Auction
  <span class="align-middle fs-4">
    <span class="badge bg-primary"><%= info.auctionType %></span>
    <span class="badge bg-primary"><%= info.sector %></span>
    <span class="badge bg-primary"><%= info.type %></span>
  </span>
</h1>

<form method="POST" action="/auctions/create" class="mb-5">
  <input type="hidden" name="_csrf" value="<%= _csrf %>" />
  <div class="form-floating mb-3">
    <input
      type="text"
      class="form-control"
      id="auctionTitle"
      name="auctionTitle"
      placeholder="Auction Title"
      required
    />
    <label for="auctionTitle">Auction Title</label>
    <div id="auctionTitleHelpBlock" class="form-text px-1"></div>
  </div>

  <div class="row">
    <div class="col">
      <div class="form-floating mb-3">
        <input
          type="datetime-local"
          class="form-control"
          id="closingTime"
          name="closingTime"
          placeholder="Closing Time"
          required
        />
        <label for="closingTime">Closing Time</label>
        <div id="closingTimeHelpBlock" class="form-text px-1">
          Date and time when the auction closes for new bids
        </div>
      </div>
    </div>
    <div class="col">
      <div class="form-floating mb-3">
        <input
          type="text"
          class="form-control"
          id="quantity"
          name="quantity"
          placeholder="Quantity"
          required
        />
        <label for="quantity">Quantity</label>
        <div id="quantityHelpBlock" class="form-text px-1"></div>
      </div>
    </div>
  </div>

  <div class="form-floating mb-3">
    <input
      type="text"
      class="form-control"
      id="contractTemplate"
      name="contractTemplate"
      placeholder="Contract Template"
      value="article"
      disabled
      required
    />
    <label for="contractTemplate">Contract Template</label>
    <div id="contractHelpBlock" class="form-text px-1">
      Contract for the auction. Currently only a single contract is supported
    </div>
  </div>

  <div class="mb-3" id="cluster-map"></div>

  <h3>Invited offers</h3>
  <div class="row row-cols-md-4 g-4">
    <% for (let offer of offers) { %>
    <!-- prevent-formatting -->
    <%- include('../partials/offer-card', { offer }) %>
    <input
      type="hidden"
      id="offerIds"
      name="offerIds"
      value="<%= offer.id %>"
      required
    />
    <% } %>
  </div>

  <div class="d-flex flex-row justify-content-end gap-2">
    <!-- <a href="#" class="btn btn-secondary mb-5 px-4 py-2">Cancel Auction</a> -->

    <button type="submit" class="btn btn-primary mb-5 px-4 py-2">
      Submit Auction
    </button>
  </div>
</form>

<script>
  const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
  const offers = {features: <%- JSON.stringify(offers) %>};
</script>
<script src="/javascripts/clusterMap.js"></script>
