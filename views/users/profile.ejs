<% layout('layouts/boilerplatetwo') %>

<section class="section about-section gray-bg" id="about">
  <div class="container">
    <div class="row align-items-center flex-row-reverse">
      <div class="col-lg-6">
        <div class="about-text go-to">
          <h3 class="dark-color"><%= queryData.username %></h3>
          <h6 class="theme-color lead">
            Trading as: <%= queryData.description %>
          </h6>
          <p><mark><%= queryData.details %></mark></p>
          <div class="row about-list">
            <div class="col-md-6">
              <div class="media">
                <label>E-mail</label>
                <p><%= queryData.email %></p>
              </div>
              <div class="media">
                <label>Name</label>
                <div><%= queryData.firstname %> <%= queryData.surname %></div>
              </div>
              <div class="media">
                <label>Residence</label>
                <p><%= queryData.country %>, <%= queryData.area %></p>
              </div>
              <div class="media">
                <label>Address</label>
                <p><%= queryData.address1 %>, <%= queryData.country %></p>
              </div>
            </div>
            <div class="col-md-6">
              <div class="media">
                <label>Postcode</label>
                <p><%= queryData.postcode %></p>
              </div>
              <div class="media">
                <label>Phone</label>
                <p><%= queryData.phone %></p>
              </div>
              <div class="media">
                <label>Role</label>
                <p><%= queryData.description %></p>
              </div>
              <div class="media">
                <label>Company</label>
                <p>This field is not available for now</p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="about-avatar">
          <% if(!currentUser.image.url) {%>
          <img src="/pictures/user_pic.png" title="" alt="" />
          <% } else {%>
          <img src="<%= currentUser.image.url %>" title="" alt="" />
          <% } %>
        </div>
      </div>
    </div>
    <div class="counter mt-4">
      <div class="row">
        <div class="col-6 col-lg-3">
          <div class="count-data text-center">
            <h6 class="count h2" data-to="500" data-speed="500">N/A</h6>
            <a href="/auctions">
              <p class="m-0px font-w-600">Active auctions</p>
            </a>
          </div>
        </div>
        <div class="col-6 col-lg-3">
          <div class="count-data text-center">
            <h6 class="count h2" data-to="150" data-speed="150">N/A</h6>
            <a href="#">
              <p class="m-0px font-w-600">My Offers</p>
            </a>
          </div>
        </div>
        <div class="col-6 col-lg-3">
          <div class="count-data text-center">
            <h6 class="count h2" data-to="850" data-speed="850">N/A</h6>
            <a href="/auctions/history">
              <p class="m-0px font-w-600">Auctions participated in</p>
            </a>
          </div>
        </div>
        <div class="col-6 col-lg-3">
          <div class="count-data text-center">
            <h6 class="count h2" data-to="190" data-speed="190">N/A</h6>
            <a href="#">
              <p class="m-0px font-w-600">Auctions won</p>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
