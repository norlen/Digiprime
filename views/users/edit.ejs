<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/profile.css">
<link rel="stylesheet" href="/stylesheets/edit.css">

<form method="POST" action="/profile/edit">
  <input type="hidden" name="_csrf" value="<%= _csrf %>" />
  
  <div class="container rounded bg-white mt-1 mb-5">
    <div class="row">
      <div class="col-md-3 border-right">
        <div class="d-flex flex-column align-items-center text-center p-3 py-5">
          <% if (currentUser.image && currentUser.image.url) {%>
            <img
              class="rounded-circle mt-5"
              width="150px"
              src="<%= currentUser.image.url %>"
            />
          <% } else {%>
            <img
              class="rounded-circle mt-5"
              width="150px"
              src="/pictures/user_pic.png"
            />
          <% } %>
          <span class="font-weight-bold"><%= currentUser.username %></span>
          <span class="text-black-50"><%= currentUser.email %></span>
        </div>
      </div>
      <div class="col-md-5 border-right">
        <div class="p-3 py-5">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="text-right">Profile Settings</h4>
          </div>
          <div class="row mt-2">
            <div class="col-md-6">
              <label class="labels">Name</label>
              <input
                id="firstname"
                name="firstname"
                type="text"
                class="form-control"
                placeholder="first name"
                value="<%= data.firstname %>"
              />
            </div>
            <div class="col-md-6">
              <label class="labels">Surname</label>
              <input
                id="surname"
                name="surname"
                type="text"
                class="form-control"
                value="<%= data.surname %>"
                placeholder="surname"
              />
            </div>
          </div>
          <div class="row mt-3">
            <div class="col-md-12">
              <label class="labels">Mobile Number</label>
              <input
                id="phone"
                name="phone"
                type="text"
                class="form-control"
                placeholder="enter phone number"
                value="<%= data.phone %>"
              />
            </div>
            <div class="col-md-12">
              <label class="labels">Address Line 1</label>
              <input
                id="address1"
                name="address1"
                type="text"
                class="form-control"
                placeholder="enter address line 1"
                value="<%= data.address1 %>"
              />
            </div>
            <div class="col-md-12">
              <label class="labels">Address Line 2</label>
              <input
                id="address2"
                name="address2"
                type="text"
                class="form-control"
                placeholder="enter address line 2"
                value="<%= data.address2 %>"
              />
            </div>
            <div class="col-md-12">
              <label class="labels">Postcode</label>
              <input
                id="postcode"
                name="postcode"
                type="text"
                class="form-control"
                placeholder="enter postcode"
                value="<%= data.postcode %>"
              />
            </div>
            <div class="col-md-12">
              <label class="labels">City/Area</label>
              <input
                id="area"
                name="area"
                type="text"
                class="form-control"
                placeholder="enter Area"
                value="<%= data.area %>"
              />
            </div>
          </div>
          <div class="row mt-3">
            <div class="col-md-6">
              <label class="labels">Country</label>
              <input
                id="country"
                name="country"
                type="text"
                class="form-control"
                placeholder="country"
                value="<%= data.country %>"
              />
            </div>
            <div class="col-md-6">
              <label class="labels">State/Region</label>
              <input
                id="state"
                name="state"
                type="text"
                class="form-control"
                value="<%= data.state %>"
                placeholder="state"
              />
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="p-3 py-5">
          <div
            class="d-flex justify-content-between align-items-center experience"
          >
            <span>Trading Information</span>
          </div>
          <br />
          <div class="col-md-12">
            <label class="labels">Trading as</label>
            <select
              class="form-select"
              aria-label="Default select example"
              id="description"
              name="description"
              value="<%= data.description %>"
              required
            >
              <option value="private" <%= data.description === "private" ? "selected" : "" %>>private person</option>
              <option value="company" <%= data.description === "company" ? "selected" : "" %>>company</option>
              <option value="middleman" <%= data.description === "middleman" ? "selected" : "" %>>middleman</option>
            </select>
          </div>
          <br />
          <div class="col-md-12">
            <label class="labels">Company</label>
            <input
              id="company"
              name="company"
              type="text"
              class="form-control"
              value=""
              placeholder="enter company name"
              disabled
            />
          </div>
          <br />
          <div class="col-md-12">
            <div class="form-group">
              <label for="details">Representative description</label>
              <textarea
                class="form-control"
                id="details"
                name="details"
                value="<%= data.details %>"
                rows="3"
              ></textarea>
            </div>
          </div>
        </div>
      </div>
      <div class="mt-5 text-center">
        <button class="btn btn-primary profile-button" type="submit">
          Save Profile
        </button>
      </div>
    </div>
  </div>
</form>
